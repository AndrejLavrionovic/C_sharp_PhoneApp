<Page
    x:Class="OnTheFarm2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnTheFarm2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="ContentPanel" 
              Grid.Row="1" 
              Margin="12,0,12,0"
              Background="White">

        <Image HorizontalAlignment="Center"
                   Height="265"
                   Margin="0,75,0,0"
                   VerticalAlignment="Top"
                   Width="370"
                   Source="Assets/img/farm_title.jpg"/>

        <Image HorizontalAlignment="Center"
                   Height="65"
                   Margin="0,10,0,0" 
                   VerticalAlignment="Top"
                   Width="122"
                   Source="Assets/img/title.jpg"/>

        <TextBlock x:Name="TitleDescription"
                       HorizontalAlignment="Left" 
                       Margin="90,530,0,0" 
                       Padding="10,10,10,10"
                       TextWrapping="Wrap" 
                       FontFamily="Verdana"
                       FontSize="14"
                       Visibility="Visible"
                       FontWeight="Bold"
                       Foreground="purple"
                       Text="For kids 3+ years.  Help enrich your child's developing literacy with this reading"
                       VerticalAlignment="Top" 
                       Width="280" 
                       Height="109"/>

        <Image HorizontalAlignment="Left"
                   Height="80"
                   Margin="10,530,0,0" 
                   VerticalAlignment="Top"
                   Width="80"
                   Source="Assets/img/3plus.png"/>

        <Button x:ConnectionId='1' Content="START"
                HorizontalAlignment="Center"
                Margin="0,380,0,0"
                VerticalAlignment="Top"
                Name="startButton"
                Background="Beige"
                BorderThickness="2"
                BorderBrush="Coral"
                Foreground="Green"
                Height="57"
                Width="192"                          />

    </Grid>
</Page>

