<Page
    x:Class="OnTheFarm2.Cow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnTheFarm2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="ContentPanel"
              Grid.Row="1"
              Margin="12,0,12,0"
              Background="Yellow">

        <Image x:ConnectionId='1' Style="{StaticResource Image}"
                   Source="Assets/img/cow.jpg"                      />

        <MediaElement x:Name="CowSound"
                          Source="/Assets/sounds/cow.mp3"
                          AutoPlay="False"
                          Volume="1"
                          />

        <TextBlock Style="{StaticResource TextBlock}"
                       Margin="10,340,0,0"
                       Text="Cows are farmed for their milk or their meat. All caws are female; the males are called bulls."/>

        <TextBlock Style="{StaticResource TextBlock}"
                       Margin="10,450,0,0"
                       Text="Cows spend about six to seven hours eating each day."/>

        <Button x:ConnectionId='2' Style="{StaticResource NavButton}"
                    Content="Main Page"
                    Margin="133,580,0,0"
                    Height="60"                       />

        <Button x:ConnectionId='3' Style="{StaticResource NavButton}"
                    Content="Next" 
                    Margin="260,580,0,0"
                    Height="60"
                    Width="100"                       />

        <Button x:ConnectionId='4' Style="{StaticResource NavButton}"
                    Content="Back" 
                    Margin="5,580,0,0"
                    Height="60"
                    Width="100"                     />

        <TextBlock Style="{StaticResource Title}"
                       Text="COW" />

        <Image x:ConnectionId='5' Style="{StaticResource s_icon}"
               Source="Assets/img/s_iconX50.png"                        />

        <MediaElement x:Name="CowStory"
                          Source="/Assets/sounds/cow_story.mp3"
                          AutoPlay="False"
                          Volume="1"
                          />

    </Grid>
</Page>

